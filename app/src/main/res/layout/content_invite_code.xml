<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.login.InviteCodeActivity"
    tools:showIn="@layout/activity_invite_code"
    android:background="@color/colorWhite">
    <com.nyso.sudian.ui.widget.CleanableEditText
        android:layout_marginTop="50dp"
        android:singleLine="true"
        android:inputType="phone"
        android:drawableRight="@mipmap/delete"
        android:layout_centerHorizontal="true"
        android:id="@+id/ce_invite_code"
        android:layout_width="300dp"
        android:layout_height="@dimen/item_show_height"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingRight="@dimen/fab_margin"
        android:textColor="@color/colorBlackText"
        android:textColorHint="@color/colorBlackText2"
        android:textSize="14sp"
        android:hint="请输入邀请码"
        android:theme="@style/MyEditText"/>
    <Button
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/ce_invite_code"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_invite_code"
        android:enabled="false"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rect_new3"
        android:text="绑定" />
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/btn_invite_code"
        android:textSize="15sp"
        android:textColor="@color/colorBlackText"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_invite_other"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rect_stroke_new"
        android:text="其他推荐人邀请码" />
</RelativeLayout>