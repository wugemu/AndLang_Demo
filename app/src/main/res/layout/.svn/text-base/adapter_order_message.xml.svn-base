<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_white_4dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:paddingRight="10dp"
        android:text="标题"
        android:textColor="@color/colorBlackText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:text="2001年2月12日 21：22"
        android:textColor="@color/colorBlackText2"
        android:textSize="12sp" />

    <View

        android:id="@+id/read_dot"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_alignRight="@+id/tv_title"
        android:layout_alignTop="@+id/tv_title"
        android:background="@drawable/bg_circle_normal" />

    <LinearLayout
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="副标题"
            android:textColor="@color/colorBlackText2"
            android:textSize="13sp" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="18dp"
            android:background="@drawable/bg_rect_width_1dp"
            android:gravity="center"
            android:text="复制"
            android:textColor="@color/colorBlackText3"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="18dp"
        android:text="说的好垃圾啥的哈鲁大师"
        android:textColor="@color/colorBlackText3"
        android:textSize="14sp" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_content"
        android:layout_margin="10dp"
        android:background="@color/line" />

    <TextView
        android:id="@+id/tv_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view_line"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="16dp"
        android:text="点击查看 >"
        android:textColor="@color/colorBlackText2"
        android:textSize="13sp" />

</RelativeLayout>