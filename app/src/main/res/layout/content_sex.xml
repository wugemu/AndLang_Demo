<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.login.SexActivity"
    tools:showIn="@layout/activity_sex"
    android:background="@color/colorWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBlackText"
            android:text="建立您的专属消费圈"
            android:textSize="20sp"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="以便让我们更了解您，\n 推荐适合您的个性化内容"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="@color/light_black"/>
        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:textColor="@color/colorBlackText2"
            android:text="请选择您的性别"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp">
            <LinearLayout
                android:id="@+id/ll_sex_boy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/boy_headimg"/>
                <TextView
                    android:id="@+id/tv_sex_boy"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男生"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackHint"/>
                <ImageView
                    android:id="@+id/iv_sex_boy"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/uncheck"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_sex_gril"
                android:layout_marginLeft="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/gril_headimg"/>
                <TextView
                    android:id="@+id/tv_sex_gril"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女生"
                    android:textSize="13sp"
                    android:textColor="@color/colorBlackText3"/>
                <ImageView
                    android:id="@+id/iv_sex_gril"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/checked"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_usersex"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rect_new"
        android:text="下一步" />
    <include layout="@layout/lang_common_loading"/>
</RelativeLayout>