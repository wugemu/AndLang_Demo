<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.login.BindUserinfoActivity"
    tools:showIn="@layout/activity_bind_userinfo"
    android:background="@color/bg_grey">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16sp">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/mine_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/def_head_image"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/mine_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_userinfo_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="吕光微"
                        android:textColor="@color/colorBlackText"
                        android:textSize="16sp"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_userinfo_sex"
                        android:src="@mipmap/gril_tip"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_userinfo_invitecode"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/mine_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请码:161616556"
                    android:textColor="@color/colorBlackText3"
                    android:textSize="13sp"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:padding="16sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="常驻地"
                android:textSize="15sp"
                android:textColor="@color/colorBlackText"/>
            <TextView
                android:id="@+id/tv_userinfo_addr"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TA未设置地址哦~"
                android:textColor="@color/colorBlackText2"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个性签名"
                android:textSize="15sp"
                android:textColor="@color/colorBlackText"/>
            <TextView
                android:id="@+id/tv_userinfo_sign"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这个人很神秘，我也不知道TA想说什么"
                android:textColor="@color/colorBlackText2"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TA的标签"
                android:textSize="15sp"
                android:textColor="@color/colorBlackText"/>
            <TextView
                android:id="@+id/tv_userinfo_tag"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TA还未选择标签哦~"
                android:textColor="@color/colorBlackText2"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"/>
            <LinearLayout
                android:id="@+id/ll_userinfo_tag"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/tag_tip"/>
                <TextView
                    android:id="@+id/tv_userinfo_taglist"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="女知青  时尚达人  高冷  运动健身"
                    android:textSize="14sp"
                    android:textColor="@color/colorOrageText"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_binduser"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rect_new"
            android:text="选择并绑定" />
    </LinearLayout>
</RelativeLayout>