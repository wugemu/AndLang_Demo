<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="43dp"
   android:orientation="vertical"
    android:background="@color/colorWhite"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_hot_sale"
            android:gravity="center"
            android:text="热销"
            android:textSize="14sp"
            android:textColor="@color/colorRedMain"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_profit"
            android:gravity="center"
            android:text="利润"
            android:textSize="14sp"
            android:textColor="@color/colorBlackText3"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_up_new"
            android:gravity="center"
            android:text="上新"
            android:textSize="14sp"
            android:textColor="@color/colorBlackText3"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/ll_price"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tv_order_price"
                android:gravity="center"
                android:text="价格"
                android:textSize="14sp"
                android:textColor="@color/colorBlackText3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_marginLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/iv_arrow_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/order_black_up"
                    android:layout_marginBottom="1.5dp"
                    />
                <ImageView
                    android:layout_marginTop="1.5dp"
                    android:id="@+id/iv_arrow_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/order_black_down"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="0.5dp"
        android:background="@color/line"
      />

</LinearLayout>